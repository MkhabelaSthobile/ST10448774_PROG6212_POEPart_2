@model IEnumerable<CMCS_App.Models.Claim>

@{
    ViewData["Title"] = "Academic Manager Dashboard";
}

<div class="container mt-4">
    <h2 class="mb-4 text-danger">Academic Manager Dashboard</h2>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Quick Stats -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">@Model.Count(c => c.Status == "Approved by Coordinator")</h5>
                    <p class="card-text">Pending Verification</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">@Model.Count(c => c.Status == "Approved by Manager")</h5>
                    <p class="card-text">Approved</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-danger">
                <div class="card-body">
                    <h5 class="card-title">@Model.Count(c => c.Status.Contains("Rejected by Manager"))</h5>
                    <p class="card-text">Rejected</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <h5 class="card-title">R @Model.Where(c => c.Status == "Approved by Manager").Sum(c => c.TotalAmount).ToString("N2")</h5>
                    <p class="card-text">Total Approved</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending Claims for Final Verification -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
            <span>Final Claim Verification</span>
            <span class="badge bg-warning">@Model.Count(c => c.Status == "Approved by Coordinator")</span>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Claim ID</th>
                        <th>Lecturer</th>
                        <th>Module</th>
                        <th>Month</th>
                        <th>Hours</th>
                        <th>Total Amount</th>
                        <th>Coordinator Approval</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model.Where(c => c.Status == "Approved by Coordinator"))
                    {
                        <tr>
                            <td>@claim.ClaimID</td>
                            <td>@claim.Lecturer?.FullName</td>
                            <td>@claim.Lecturer?.ModuleName</td>
                            <td>@claim.Month</td>
                            <td>@claim.HoursWorked</td>
                            <td>R @claim.TotalAmount.ToString("N2")</td>
                            <td>
                                <span class="badge bg-success">@claim.Status</span>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <form asp-action="Verify" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@claim.ClaimID" />
                                        <button type="submit" class="btn btn-success btn-sm"
                                                onclick="return confirm('Are you sure you want to approve this claim for payment?')">
                                            Approve Payment
                                        </button>
                                    </form>
                                    <button type="button" class="btn btn-danger btn-sm"
                                            data-bs-toggle="modal" data-bs-target="#rejectModal@(claim.ClaimID)">
                                        Reject
                                    </button>
                                </div>

                                <!-- Rejection Modal -->
                                <div class="modal fade" id="rejectModal@(claim.ClaimID)" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Reject Claim #@claim.ClaimID</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <form asp-action="Reject" method="post">
                                                <div class="modal-body">
                                                    <input type="hidden" name="id" value="@claim.ClaimID" />
                                                    <div class="mb-3">
                                                        <label for="rejectionReason@(claim.ClaimID)" class="form-label">Reason for Rejection *</label>
                                                        <textarea class="form-control" id="rejectionReason@(claim.ClaimID)"
                                                              name="rejectionReason" rows="3" required
                                                              placeholder="Please provide a detailed reason for rejecting this claim..."></textarea>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <button type="submit" class="btn btn-danger">Confirm Rejection</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any(c => c.Status == "Approved by Coordinator"))
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted">No pending claims for final verification.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Reviewed Claims -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
            <span>Reviewed Claims</span>
            <span class="badge bg-light text-dark">@Model.Count(c => c.Status == "Approved by Manager" || c.Status.Contains("Rejected by Manager"))</span>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Claim ID</th>
                        <th>Lecturer</th>
                        <th>Module</th>
                        <th>Month</th>
                        <th>Hours Worked</th>
                        <th>Total Amount</th>
                        <th>Final Status</th>
                        <th>Rejection Reason</th>
                        <th>Reviewed On</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model.Where(c => c.Status == "Approved by Manager" || c.Status.Contains("Rejected by Manager")))
                    {
                        <tr>
                            <td>@claim.ClaimID</td>
                            <td>@claim.Lecturer?.FullName</td>
                            <td>@claim.Lecturer?.ModuleName</td>
                            <td>@claim.Month</td>
                            <td>@claim.HoursWorked</td>
                            <td>R @claim.TotalAmount.ToString("N2")</td>
                            <td>
                                <span class="badge @(claim.Status.Contains("Approved") ? "bg-success" : "bg-danger")">
                                    @claim.Status
                                </span>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(claim.RejectionReason))
                                {
                                    <small class="text-danger">@claim.RejectionReason</small>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>@claim.SubmissionDate.ToString("dd MMM yyyy")</td>
                        </tr>
                    }
                    @if (!Model.Any(c => c.Status == "Approved by Manager" || c.Status.Contains("Rejected by Manager")))
                    {
                        <tr>
                            <td colspan="9" class="text-center text-muted">No reviewed claims yet.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Reports -->
    <div class="card shadow-sm">
        <div class="card-header bg-secondary text-white">
            Generate Reports
        </div>
        <div class="card-body">
            <div class="btn-group" role="group">
                <form asp-action="GenerateReport" method="post" class="d-inline">
                    <input type="hidden" name="reportType" value="summary" />
                    <button type="submit" class="btn btn-outline-primary">Claims Summary Report</button>
                </form>
                <button class="btn btn-outline-success">Download Excel Report</button>
                <button class="btn btn-outline-danger">Generate PDF Report</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-focus on rejection reason textarea when modal opens
        document.addEventListener('DOMContentLoaded', function() {
            var rejectModals = document.querySelectorAll('[id^="rejectModal"]');
            rejectModals.forEach(function(modal) {
                modal.addEventListener('shown.bs.modal', function() {
                    var textarea = this.querySelector('textarea');
                    textarea.focus();
                });
            });
        });
    </script>
}