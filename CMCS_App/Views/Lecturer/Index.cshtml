@{
    ViewData["Title"] = "Lecturer Dashboard";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">Lecturer Dashboard</h2>

    <!-- Submit Claim -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            Submit a New Claim
        </div>
        <div class="card-body">
            <form>
                <div class="mb-3">
                    <label for="module" class="form-label">Module Name</label>
                    <input type="text" class="form-control" id="module" placeholder="Enter module name" />
                </div>

                <div class="mb-3">
                    <label for="month" class="form-label">Month</label>
                    <input type="text" class="form-control" id="month" placeholder="Enter month e.g. September" />
                </div>

                <div class="mb-3">
                    <label for="rate" class="form-label">Hourly Rate (R)</label>
                    <input type="number" class="form-control" id="rate" placeholder="Enter hourly rate" />
                </div>

                <div class="mb-3">
                    <label for="hours" class="form-label">Hours Worked</label>
                    <input type="number" class="form-control" id="hours" placeholder="Enter hours worked" />
                </div>

                <div class="mb-3">
                    <label for="file" class="form-label">Upload Supporting Document</label>
                    <input type="file" class="form-control" id="file" />
                </div>

                <button type="submit" class="btn btn-success">Submit Claim</button>
            </form>
        </div>
    </div>

    <!-- Claim Status -->
    <div class="card shadow-sm">
        <div class="card-header bg-secondary text-white">
            Claim Status
        </div>
        <div class="card-body">
            <table class="table table-bordered table-striped align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Claim ID</th>
                        <th>Module</th>
                        <th>Month</th>
                        <th>Hours</th>
                        <th>Hourly Rate</th>
                        <th>Total Amount</th>
                        <th>Status</th>
                        <th>Submission Date</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>101</td>
                        <td>Information Systems</td>
                        <td>September</td>
                        <td>12</td>
                        <td>R250</td>
                        <td>R3000</td>
                        <td><span class="badge bg-warning">Pending</span></td>
                        <td>15 Sept 2025</td>
                    </tr>
                    <tr>
                        <td>102</td>
                        <td>Programming 2A</td>
                        <td>August</td>
                        <td>8</td>
                        <td>R220</td>
                        <td>R1760</td>
                        <td><span class="badge bg-success">Approved</span></td>
                        <td>10 Sept 2025</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
