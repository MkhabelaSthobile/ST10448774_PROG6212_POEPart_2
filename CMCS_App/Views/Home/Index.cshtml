@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Welcome to CMCS</h1>
    <p class="lead">Contract Monthly Claim System</p>

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-user-graduate text-primary"></i> Lecturer</h5>
                    <p class="card-text">Submit and track your monthly claims</p>
                    <a href="@Url.Action("Index", "Lecturer")" class="btn btn-primary">Go to Lecturer Dashboard</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-user-tie text-info"></i> Programme Coordinator</h5>
                    <p class="card-text">Review and approve lecturer claims</p>
                    <a href="@Url.Action("Index", "ProgrammeCoordinator")" class="btn btn-info">Go to Coordinator Dashboard</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-user-cog text-danger"></i> Academic Manager</h5>
                    <p class="card-text">Final verification and reporting</p>
                    <a href="@Url.Action("Index", "AcademicManager")" class="btn btn-danger">Go to Manager Dashboard</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s;
        height: 200px;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .card-body {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }
</style>